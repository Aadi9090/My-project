@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
}




@model MyProject.Models.ViewModels.LoginViewModel

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  
    <style>
        body {
            background-color: #F6EACB; 
        }

        .login-container {
            background-color: #ffffff;
            border: 1px solid #007bff;
            border-radius: 15px; 
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); 
            padding: 2rem;
            margin-top: 5rem; 
        }

        .login-header {
            font-size: 2.5rem; 
            color: #007bff; 
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background-color: #007bff; 
            border-color: #007bff; 
            color: #ffffff;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #0056b3; 
                border-color: #0056b3; 
            }

        .form-control {
            border-radius: 5px; 
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075); 
        }

        .form-group label {
            font-weight: bold; 
        }

        .form-group .text-danger {
            font-size: 0.875rem; 
        }

        .text-black {
            color: #000000;
            font-weight: bold; 
        }

            .text-black:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row mt-lg-5">
            <div class="col-4 offset-4 login-container">
                <h1 class="login-header text-center">
                    Login
                </h1>
                @if (TempData["Error"] != null)
                {
                    <div>
                        <p style="color:red;"> @TempData["Error"]</p>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div>
                        <p style="color:red;"> @TempData["ErrorMessage"]</p>
                    </div>
                }
                <form method="post" asp-action="Login">
                    <div class="form-group">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter Username" autocomplete="off" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter Password" type="password" autocomplete="off" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" class="btn btn-primary" value="Login" />
                        <a class=" ml-2" asp-action="SignUp">Dont have an account? SignUp</a>
                    </div>
                    <div class="text-center">
                    </div>
                </form>
            </div>
        </div>
    </div>

 
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>


